<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    // 선택했을때
    <item android:state_selected="true">
        <shape>
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            <solid android:color="#ffffff" /> // 배경색
            <stroke android:width="1dp" android:color="@color/sex_background_selected"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <item android:state_selected="false">
        <shape>
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            <solid android:color="#ffffff" /> // 배경색
            <stroke android:width="1dp" android:color="@color/sex_background_unselected"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

</selector>