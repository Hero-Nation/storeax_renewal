<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffffff"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격설정"
        android:id="@+id/text_dialog"
        android:textSize="16dp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

        <!-- 시크바 -->
        <org.florescu.android.rangeseekbar.RangeSeekBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangeSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showLabels="false"
            app:valuesAboveThumbs="false"
            rsb:absoluteMaxValue="100"
            rsb:absoluteMinValue="0" />
        <!--// 시크바 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:text="0원"
                android:textSize="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingRight="20dp"
                android:text="100만원"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:background="@drawable/detail_brand_product_bg">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="직접입력"
                    android:textSize="14dp"
                    android:background="@null"
                    android:textColorHint="#d7d7d7"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="원"
                    android:paddingRight="10dp"
                    android:textColor="#999999"
                    android:gravity="end"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="~"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:background="@drawable/detail_brand_product_bg">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="직접입력"
                    android:textSize="14dp"
                    android:background="@null"
                    android:textColorHint="#d7d7d7"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="원"
                    android:paddingRight="10dp"
                    android:textColor="#999999"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="0원 ~ 2만원"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:gravity="center"
            android:background="@drawable/detail_brand_set_price_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="2만원 ~ 5만원"
            android:textSize="14dp"
            android:textColor="#999999"
            android:gravity="center"
            android:background="@drawable/detail_brand_set_price_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="5만원 ~ 10만원"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:gravity="center"
            android:background="@drawable/detail_brand_set_price_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="10만원이상"
            android:textSize="14dp"
            android:textColor="#999999"
            android:gravity="center"
            android:background="@drawable/detail_brand_set_price_bg"/>

    </LinearLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="저장하기"
        android:textSize="14dp"
        android:textStyle="bold"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/brandsetbutton"
        android:textColor="#ffffff" />

</LinearLayout>